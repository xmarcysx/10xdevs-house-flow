---
import Dashboard from "../components/Dashboard";
import Navbar from "../components/Navbar";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Dashboard - HouseFlow">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Navbar -->
    <Navbar client:only="react" />

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8 pt-24">
      <div class="mb-6 md:mb-8">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">Dashboard</h1>
        <p class="text-sm md:text-base text-gray-600 dark:text-gray-400 mt-2">Przegląd Twoich finansów</p>
      </div>

      <!-- Dashboard zostanie zaimplementowany jako komponent React -->
      <Dashboard client:only="react" />
    </div>
  </div>
</Layout>
